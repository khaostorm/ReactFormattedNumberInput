{
    "include": [
        "./src/"
    ],
    "exclude": [
        "./**/node_modules",
        "./**/dist"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "composite": true,
        "module": "commonjs",
        "target": "es2020",
        "allowJs": true,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "./dist/",
        "rootDir": "./src/"
    },
    "buildOptions": {
        "incremental": true
    }
}